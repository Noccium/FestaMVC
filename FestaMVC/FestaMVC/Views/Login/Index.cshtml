@{
    Layout = null;
}
@model FestaMVC.Models.LoginModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Gestão de Festas</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href= "@Url.Content("~/Content/lg.festa.frontend.views.login.index.css")" />
 
    <link rel="shortcut icon" type="image/ico" href= "@Url.Content("~/Content/Images/favicon.ico")"/>
    
</head>
<body>
	<div class="container">
    
        <div class="login">
    	    <div class="logo">      
          <img src="@Url.Content("~/Content/Images/logo.png")"></div>       
          <div class="texto">Gestão de Festas</div>
    
         <div class="arealinha">
     	    <hr class="linha"/>
         </div>
          @using (Html.BeginForm("Index", "Login"))
          {
            <div class="formulario">
                <div id="campoNome" class="texto">
                    @Html.TextBoxFor(x => x.campoNome, new { type = "text", placeholder="  Nome"})
                </div>
                <div class="text-error" >
                    <small class="error">@Html.ValidationMessageFor(x => x.campoNome)</small>
                </div>
                
                <div id="campoSenha" class="texto">
                    @Html.PasswordFor(x => x.campoSenha, new { placeholder = "  Senha" })
                </div>
                <div class="text-error" >
                  <small>@Html.ValidationMessageFor(x => x.campoSenha)</small>
                </div>

                <div class="areabotao">
                    <button id="botao" class="botao" type="submit">Entrar</button>
                </div>
           </div>
         }
        </div>
    </div>  
</body>
</html>